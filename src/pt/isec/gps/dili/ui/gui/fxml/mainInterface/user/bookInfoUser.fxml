<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="bookInfoUser" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="430.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pt.isec.gps.dili.ui.gui.controllers.mainInterface.user.BookInfoUserController">
    <top>
        <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnVoltar" alignment="CENTER" mnemonicParsing="false">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </top>
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <HBox prefHeight="38.0" prefWidth="600.0">
                    <children>
                        <ImageView fx:id="ivBookImage" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <HBox.margin>
                                <Insets right="10.0"/>
                            </HBox.margin>
                        </ImageView>
                        <VBox prefHeight="150.0" prefWidth="154.0" spacing="10.0" HBox.hgrow="ALWAYS">
                            <children>
                                <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                                    <children>
                                        <Label fx:id="lbTitle" text="Label">
                                            <font>
                                                <Font size="18.0"/>
                                            </font>
                                        </Label>
                                    </children>
                                </HBox>
                                <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                                    <children>
                                        <Label text="Author:"/>
                                        <Label fx:id="lbAuthor" text="Label"/>
                                    </children>
                                </HBox>
                                <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                                    <children>
                                        <Label text="Genre:"/>
                                        <Label fx:id="lbGenre" text="Label"/>
                                    </children>
                                </HBox>
                                <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                                    <children>
                                        <Label text="Language:"/>
                                        <Label fx:id="lbLanguage" text="Label"/>
                                    </children>
                                </HBox>
                                <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                                    <children>
                                        <Label text="Synopsis:"/>
                                        <Label fx:id="lbSynopsis" text="Label"/>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                        <VBox alignment="CENTER" prefHeight="150.0" prefWidth="156.0" spacing="10.0">
                            <children>
                                <Button fx:id="btnDownload" mnemonicParsing="false" text="Download"/>
                                <Label fx:id="lbNumberDownloads" text="Label"/>
                                <Region prefHeight="200.0" prefWidth="200.0"/>
                            </children>
                        </VBox>
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </HBox>
                <Separator prefHeight="71.0" prefWidth="600.0"/>
                <HBox prefHeight="33.0" prefWidth="600.0">
                    <children>
                        <HBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Label text="Rating: "/>
                                <ImageView fx:id="ivStars" fitHeight="35.0" fitWidth="72.0" pickOnBounds="true"
                                           preserveRatio="true"/>
                                <Label fx:id="lbRating" text="Label"/>
                            </children>
                            <HBox.margin>
                                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
                            </HBox.margin>
                        </HBox>
                        <Region prefHeight="85.0" prefWidth="121.0" HBox.hgrow="ALWAYS"/>
                        <HBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Button fx:id="btnRating" mnemonicParsing="false" text="Add Rating"/>
                                <Label fx:id="lbReviews" text="Label"/>
                            </children>
                            <HBox.margin>
                                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
                            </HBox.margin>
                        </HBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>
