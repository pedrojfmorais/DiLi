<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="bookInterfaceAdmin" prefHeight="105.0" xmlns="http://javafx.com/javafx/17.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pt.isec.gps.dili.ui.gui.controllers.mainInterface.admin.ScrollPaneBookItemAdminController">
    <center>
        <HBox alignment="CENTER" prefHeight="202.0" prefWidth="532.0" BorderPane.alignment="CENTER">
            <children>
                <ImageView fx:id="ivBook" fitHeight="105.0" fitWidth="104.0" pickOnBounds="true" preserveRatio="true">
                    <HBox.margin>
                        <Insets left="10.0"/>
                    </HBox.margin>
                </ImageView>
                <VBox alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" prefHeight="200.0" prefWidth="100.0"
                      spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label fx:id="lbTitle" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                               text="Label"/>
                        <Label fx:id="lbSynopsis" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                               text="Label"/>
                    </children>
                    <HBox.margin>
                        <Insets left="10.0"/>
                    </HBox.margin>
                </VBox>
                <HBox alignment="CENTER" prefHeight="202.0" prefWidth="248.0" spacing="10.0">
                    <children>
                        <Button fx:id="btnInfo" mnemonicParsing="false" text="+ INFO"/>
                        <Button fx:id="btnVisible" mnemonicParsing="false"/>
                        <Button fx:id="btnEdit" mnemonicParsing="false"/>
                        <Button fx:id="btnDelete" mnemonicParsing="false"/>
                    </children>
                </HBox>
            </children>
        </HBox>
    </center>
</BorderPane>
